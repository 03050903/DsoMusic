<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPageBackground"
    tools:context=".ui.activity.SettingsActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.dirror.music.widget.ItemLayout
                android:id="@+id/itemFeedback"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:text="反馈">

            </com.dirror.music.widget.ItemLayout>

            <com.dirror.music.widget.ItemLayout
                android:id="@+id/itemOpenSource"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:text="使用开源项目">

            </com.dirror.music.widget.ItemLayout>


            <com.dirror.music.widget.ItemLayout
                android:id="@+id/itemSourceCode"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:visibility="gone"
                app:text="源代码（Github）">

            </com.dirror.music.widget.ItemLayout>

            <com.dirror.music.widget.ValueView
                android:id="@+id/itemVersion"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:text="版本"
                app:value="1.0.0">

            </com.dirror.music.widget.ValueView>

            <com.dirror.music.widget.ValueView
                android:id="@+id/itemFoyouVersion"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:text="Foyou 库版本"
                app:value="1.0.0">

            </com.dirror.music.widget.ValueView>

            <com.dirror.music.widget.ItemLayout
                android:id="@+id/itemLanguage"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:text="中文 / English">

            </com.dirror.music.widget.ItemLayout>
        </LinearLayout>
    </ScrollView>

    <com.dirror.music.widget.TitleBarLayout
        android:id="@+id/titleBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:text="设置">

    </com.dirror.music.widget.TitleBarLayout>
</androidx.constraintlayout.widget.ConstraintLayout>